block content
  h1 Edit Lesson

  //- form.lesson(method='POST', action='/user/courses/#{courses._id}/lessons/#{lesson_id}')
  form.lesson(method='POST', action='/user/courses/lessons/#{lesson._id}')
    .form-group
      label.lesson-name Lesson Name
      input.form-control(type='text', name='name', placeholder='Enter Lesson Name' value=lesson.name)
    .form-group
      label.lesson-des Lesson Description
      textarea.form-control(type='text',name='description', placeholder='Enter Lesson Description')= lesson.description
    input(type='hidden' name='material' value=material)
    #content-container
      .basic-wrapper(style='display: none;')
          .toolbar-container
            select.sc-font(title='Font')
              option(value='sans-serif', selected='selected') Sans Serif
              option(value='Georgia, serif') Serif
              option(value='Monaco, "Courier New", monospace') Monospace
            select.sc-size(title='Size')
              option(value='10px') Small
              option(value='13px', selected='selected') Normal
              option(value='18px') Large
              option(value='32px') Huge
            select.sc-align(title='Text Alignment')
              option(value='left', selected='selected') Left
              option(value='center') Center
              option(value='right') Right
              option(value='justify') Justify
            button.sc-bold(title='Bold') Bold
            button.sc-italic(title='Italic') Italic
            button.sc-underline(title='Underline') Underline
          .editor-container
        .advanced-wrapper
          .toolbar-container
            span.sc-format-group
              select.sc-font(title='Font')
                option(value='sans-serif', selected='selected') Sans Serif
